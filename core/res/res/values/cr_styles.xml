<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Slim recent app screen animation -->
    <style name="Animation.RecentScreen">
        <item name="windowEnterAnimation">@anim/recent_screen_enter</item>
        <item name="windowExitAnimation">@anim/recent_screen_exit</item>
    </style>

    <style name="Animation.RecentScreen.Left">
        <item name="windowEnterAnimation">@anim/recent_screen_enter_left</item>
        <item name="windowExitAnimation">@anim/recent_screen_exit_left</item>
    </style>

    <!-- Power Menu Animation -->
    <style name="PowerMenuBottomAnimation">
        <item name="windowEnterAnimation">@anim/slide_in_up</item>
        <item name="windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="PowerMenuTopAnimation">
        <item name="windowEnterAnimation">@anim/slide_in_down</item>
        <item name="windowExitAnimation">@anim/slide_out_up</item>
    </style>
    <style name="PowerMenuRotateAnimation">
        <item name="windowEnterAnimation">@anim/rotate</item>
    </style>
    <style name="PowerMenuflyAnimation">
        <item name="windowEnterAnimation">@anim/recent_enter</item>
        <item name="windowExitAnimation">@anim/recent_exit</item>
    </style>
    <style name="PowerMenuTnAnimation">
        <item name="windowEnterAnimation">@anim/tn_toast_enter</item>
        <item name="windowExitAnimation">@anim/tn_toast_exit</item>
    </style>
    <style name="PowerMenuTranslucentAnimation">
        <item name="windowEnterAnimation">@anim/translucent_enter</item>
        <item name="windowExitAnimation">@anim/translucent_exit</item>
    </style>
    <style name="PowerMenuXylonAnimation">
        <item name="windowEnterAnimation">@anim/xylon_toast_enter</item>
        <item name="windowExitAnimation">@anim/xylon_toast_exit</item>
    </style>
    <style name="PowerMenuCardAnimation">
        <item name="windowEnterAnimation">@anim/honami_toast_enter</item>
        <item name="windowExitAnimation">@anim/honami_toast_exit</item>
    </style>
</resources>
